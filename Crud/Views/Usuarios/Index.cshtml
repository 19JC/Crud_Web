@model IEnumerable<Crud.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Grid Usuario</h2>

<p>
   <button style="background-color:white; color:black; Border: 2px solid springgreen;">@Html.ActionLink("Crear Usuario", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            <label name="Nombre">@Html.DisplayNameFor(model => model.Nombre_Usuario)</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Nacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexualidad.Tipo_Sexualidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre_Usuario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fecha_Nacimiento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sexualidad.Tipo_Sexualidad)
    </td>
        <td>
            <button style="background-color: white; color: black; Border: 2px solid springgreen; border-radius:8px;">@Html.ActionLink("Modificar", "Edit", new { id = item.Id_Usuario }) </button>
            <button style="background-color: white; color: black; Border: 2px solid red; border-radius: 8px;">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Usuario })</button>
        </td>
</tr>
}

</table>
